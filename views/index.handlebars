<h1 style="text-align: center;">Burger Time!</h1>
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h2>Menu:</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li>
                        {{this.burger_name}}
                        <form style="display:inline" action="/{{this.id}}" method="POST">
                            <input type="hidden" name="devour">
                            <button class="btn btn-danger" type="submit">Devour</button>
                        </form>
                    </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>

            <div class="col-md-4">
                <img src="assets/img/burger.png" class="mx-auto d-block" style="height: 200px;" width="300px">
            </div>

            <div class="col-md-4">
                <div>
                    <h2>Burgers You Have Eaten:</h2>
                    <ul>
                        {{#each burgers}}
                        {{#if this.devour}}
                        <li>
                            {{this.burger_name}}
                        </li>
                        {{/if}} {{/each}}
                    </ul>
                </div>
            </div>
        </div>

    </div>
</main>
<h3 style="text-align: center;">Add a Burger To The Menu!</h3>
<p style="text-align: center;">Enter a burger you would like to add to the menu:</p>
<div class="d-flex justify-content-center container ">
    <form class="col-lg-6 offset-lg-3" method="POST">
        <div class="row justify-content-center">
            <input type="text" id="name" class="form-control form-row text-center" name="burger_name">
            <button type="submit" class="btn btn-danger">Add Burger!</button>
        </div>
    </form>
</div>